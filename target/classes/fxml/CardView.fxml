<AnchorPane prefHeight="715.0" prefWidth="941.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cardgame.javafx.controller.CardViewController">
   <children>
      <GridPane layoutX="559.0" layoutY="17.0" prefHeight="260.0" prefWidth="359.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="playButton" mnemonicParsing="false" onAction="#playCardButtonPushed" prefHeight="45.0" prefWidth="100.0" text="Play" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label prefHeight="39.0" prefWidth="150.0" text="Player One points:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label prefHeight="17.0" prefWidth="150.0" text="Player Two Points:" GridPane.rowIndex="1">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="playerOneTextField" GridPane.columnIndex="1" />
            <TextField fx:id="playerTwoTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#saveGameButtonPushed" prefHeight="45.0" prefWidth="100.0" text="Save Games" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <Button layoutX="739.0" layoutY="345.0" mnemonicParsing="false" onAction="#scoreBoardPushed" prefHeight="45.0" prefWidth="100.0" text="Score Board" />
   </children>
</AnchorPane>
